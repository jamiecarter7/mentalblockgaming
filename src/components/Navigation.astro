---
import { Image } from "@astrojs/image/components";
import logo from "../assets/images/logo/logo.png";
import HomeIcon from "../assets/icons/home.svg";
---

<div class="position fixed top-0 z-10 w-full text-neutral-500">
  <p class="text-xs text-white text-center m-0 p-2 bg-red-700">
    This website is being repaired. Please find downloads in the maps page while
    we restore content
  </p>
  <div
    class="flex justify-between items-center h-24 px-5 pr-10 bg-white bg-opacity-80 backdrop-blur-xl"
  >
    <a href="/" class="flex place-items-center gap-5">
      <Image
        src={logo}
        class="block aspect-square w-14 h-14"
        alt="Mental Block Gmaing logo"
      />
      <span class="text-xl text-neutral-700">Mental Block Gaming</span>
    </a>
    <div>
      <ul class="flex items-center gap-4 text-sm capitalize">
        <li class="flex items-center">
          <a class="inline-block px-2 py-1" href="/"
            ><Image class="w-5 h-5" src={HomeIcon} alt="Home" /></a
          >
        </li>
        <li><a class="p-2" href="/maps">maps</a></li>
        <li><a class="p-2" href="/chemistry">chemistry</a></li>
        <li><a class="p-2" href="/story">RougeQuest Story</a></li>
        <li><a class="p-2" href="/blog">blog</a></li>
        <li><a class="p-2" href="/about">about</a></li>
      </ul>
    </div>
  </div>
</div>
