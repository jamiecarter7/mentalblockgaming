---
import { Image } from "astro:assets";
import WarningIcon from "../../assets/icons/warning.png";
---

<div class="mt-4 bg-neutral-200 flex items-center rounded-sm overflow-hidden">
  <p class="bg-neutral-300 text-center w-1/3 m-0 p-6 py-4 pb-5">
    <Image src={WarningIcon} alt="Warning icon" class="w-20 mx-auto" />
  </p>
  <div class="h-full px-8 w-full text-center">
    <p class="text-xl m-0 w-full">
      'Command Blocks'
      <span class="underline underline-offset-4">enabled</span>
    </p>
  </div>
</div>
