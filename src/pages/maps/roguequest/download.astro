---
import { Image } from "astro:assets";
import Container from "../../../components/Container.astro";
import DownloadHero from "../../../components/DownloadHero.astro";
import PartialRestore from "../../../components/elements/PartialRestore.astro";
import InstallationHelp from "../../../components/DownloadInstructions.astro";

import WarningIcon from "../../../assets/icons/warning.png";

import MinecraftVersionWarning from "../../../components/MinecraftVersionWarning.astro";
import Layout from "../../../layouts/Layout.astro";
import DownloadList from "../../../components/DownloadList.astro";
import EnableCommandBlocks from "../../../components/elements/EnableCommandBlocks.astro";
import PlayersRequired from "../../../components/elements/PlayersRequired.astro";
import DownloadSidebarHelpLinks from "../../../components/elements/DownloadSidebarHelpLinks.astro";

const maps = {
  title: "Maps",
  file: {
    name: "RogueQuest - Map",
    text: "English",
    url: "https://www.mediafire.com/file/5uz8cade0fldly0/RogueQuest_Map_v1.2.zip/file",
  },
};

const resources = {
  title: "Resource pack",
  file: {
    name: "RogueQuest - Resource pack",
    text: "English",
    url: "https://www.mediafire.com/file/x4o8c3nlqeepa28/RogueQuest_v1.0.zip/file",
  },
};
---

<Layout
  title="Download RogueQuest"
  description="Download the map and resource pack files for 'RogueQuest'"
>
  <section>
    <DownloadHero map="RougeQuest" />
    <Container>
      <h2 class="mb-8 mt-10">Requirements</h2>
      <div class="flex gap-16">
        <div class="w-2/3">
          <MinecraftVersionWarning version="1.10.2" />
          <PlayersRequired number="1-4" />
          <EnableCommandBlocks />

          <h2 class="mt-16">Files</h2>
          <DownloadList downloadList={resources} />
          <DownloadList downloadList={maps} />

          <h2 class="mt-16" id="setupguide">Setup guidance</h2>
          <InstallationHelp />
        </div>
        <!-- --------- -->
        <!--  Sidebar  -->
        <!-- --------- -->
