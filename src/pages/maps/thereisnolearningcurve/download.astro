const resources = {
  title: "Resource pack",
  alldownloads: "https://www.mediafire.com/folder/xog4tar9jy0ux/Resource_Pack",
  file: {
    name: "There is no Learning Curve - Resource pack",
    text: "English",
    url: "https://www.mediafire.com/file/1hplps54c4apkv6/There_is_no_Learning_Curve_-_English.zip/file",
  },
  translations: [
    {
      name: "There is no Learning Curve - Resource pack (Espanol)",
      text: " 134,638 downloads",
      url: "https://www.mediafire.com/file/ztt5j29jepc7ix9/There_is_no_Learning_Curve_-_Resource_pack_%2528Espanol%2529.zip/file",
    },
    {
      name: "There is no Learning Curve - Resource pack (Francais)",
