---
import { Image } from "@astrojs/image/components";
import WarningIcon from "../assets/icons/warning.png";
export interface Props {
  version: string;
  snapshot?: boolean;
}

const { version, snapshot } = Astro.props;
---

<p class="text-right mb-3 text-sm">
  <a to="" class="text-neutral-400 underline underline-offset-4"
    >How do I change my version?</a
  >
</p>

<div class="bg-neutral-200 flex items-center rounded-sm overflow-hidden">
  <p class="bg-neutral-300 text-center w-1/3 m-0 p-6 py-4 pb-5">
    {
      !snapshot && (
        <span class="leading-3 uppercase font-medium text-neutral-500 text-sm">
          version
        </span>
      )
    }
    {
      snapshot && (
        <span class="leading-3 uppercase font-medium text-neutral-500 text-sm">
          snapshot
        </span>
      )
    }<br />
    <span class="text-neutral-500 text-5xl font-bold">{version}</span>
  </p>
  <div class="h-full px-8 w-full text-center">
    <p class="text-xl m-0 w-full">
      Play this map using <span class="underline underline-offset-4"
        >Minecraft v1.8</span
      >
    </p>
  </div>
</div>
<div class="mt-4 bg-yellow-300 flex items-center rounded-sm overflow-hidden">
  <p class="bg-yellow-500 text-center w-1/3 m-0 p-3">
    <Image src={WarningIcon} alt="Warning icon" class="w-8 mx-auto" />
  </p>
  <div class="h-full px-8 w-full text-center">
    <p class="text-xl m-0 w-full text-yellow-600">
      Command Blocks must be enabled
    </p>
  </div>
</div>
