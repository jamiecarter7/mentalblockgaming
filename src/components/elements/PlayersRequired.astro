---
export interface Props {
  number: string;
}
const { number } = Astro.props;
const showPlural = number === "1" ? false : true;
---

<div class="mt-4 bg-neutral-200 flex items-center rounded-sm overflow-hidden">
  <p class="bg-neutral-300 text-center w-1/3 m-0 p-6 py-4">
    <span class="text-neutral-500 text-5xl font-bold">{number}</span>
    <br />
    <span class="leading-3 uppercase font-medium text-neutral-500 text-sm">
      Player{showPlural && "s"}
    </span>
  </p>
  <div class="h-full px-8 w-full text-center">
    {
      showPlural ? (
        <p class="text-xl m-0 w-full">
          This map requires
          <span class="underline underline-offset-4">{number} players</span>
        </p>
      ) : (
        <p class="text-xl m-0 w-full">
          This map is
          <span class="underline underline-offset-4">single player</span>
        </p>
      )
    }
  </div>
</div>
