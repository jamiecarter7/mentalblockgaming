---
export interface Props {
  to: string;
  bodyText: string;
  class?: string;
  fill?: boolean;
}

const { to, bodyText, class: className, fill } = Astro.props;

let additionalClass = "";
if (fill) {
  additionalClass = "fill";
}
---

<a class={(className, additionalClass)} href={to}>
  {bodyText}
</a>

<style>
  a {
    @apply border-[2px] rounded-[3px] text-lg border-red-600 text-red-600 my-2 px-4 py-2.5 capitalize inline-block duration-150;
  }

  a:hover {
    @apply bg-red-600 text-white;
  }

  a.fill {
    @apply bg-red-600 text-white;
  }
</style>
